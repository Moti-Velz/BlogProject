@model IEnumerable<BlogProject.Models.Post>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

@foreach (var item in Model)
{
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between">
            <span>@Html.DisplayFor(modelItem => item.User.Username)</span>
            <span>@item.CreatedAt.ToString("MM/dd/yyyy")</span>

        </div>
        <div class="card-body">
            <h5 class="card-title">@Html.DisplayFor(modelItem => item.Titre)</h5>
            <p class="card-text">@Html.DisplayFor(modelItem => item.Body)</p>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <div class="btn-group w-50">
                <button class="btn btn-light" onclick="increaseScore(@item.Id)">
                    <i class="fas fa-arrow-up"></i>
                </button>
                <span id="score-@item.Id" class="btn btn-light disabled">
                    @Html.DisplayFor(modelItem => item.Score)
                </span>
                <button class="btn btn-light" onclick="decreaseScore(@item.Id)">
                    <i class="fas fa-arrow-down"></i>
                </button>

            </div>
            <a class="btn btn-secondary w-50" asp-action="PostDetails" asp-route-id="@item.Id">
                Comments
            </a>
        </div>
        <div class="card-footer">
            <form asp-controller="Comment" asp-action="Create" asp-route-postId="@item.Id" method="post">
                <div class="input-group">
                    <input type="text" name="comment" class="form-control" placeholder="Leave a comment...">
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary" type="submit">Comment</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
}

<script>
    function updateScore(postId, change) {
        $.ajax({
            url: '/Post/UpdateScore',
            type: 'POST',
            data: {
                'postId': postId,
                'change': change
            },
            success: function (response) {
                $('#score-' + postId).text(response.newScore);
            }
        });
    }

    function increaseScore(postId) {
        updateScore(postId, 1);
    }

    function decreaseScore(postId) {
        updateScore(postId, -1);
    }
</script>